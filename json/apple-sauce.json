  "steps": [
    {
      "id": 1,
      "text": "Peel and core the apples"
    },
    {
      "id": 2,
      "text": "Cut into wedges and place in ascorbic acid color keeper solution (or lemon juice and water solution)"
    },
    {
      "id": 3,
      "text": "Soak for 5 minutes"
    },
    {
      "id": 4,
      "text": "In a large (6-8 qt) saucepot, add the apple cider cinnamon, nutmeg, and the apples"
    },
    {
      "id": 5,
      "text": "Heat over medium-high heat until cider begins to boil"
    },
    {
      "id": 6,
      "text": "Reduce heat to low and simmer, covered, for 20-30 minutes (apples should be soft all the way through)"
    },
    {
      "id": 7,
      "text": "Mash the sauce with a potato masher or immersion blender to desired consistency"
    },
    {
      "id": 8,
      "text": "Add brown sugar to taste"
    }
  ],
