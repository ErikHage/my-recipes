  "steps": [
    {
      "id": 1,
      "text": "Chop leek into small pieces"
    },
    {
      "id": 2,
      "text": "Melt butter in a 6 quart pan over medium heat"
    },
    {
      "id": 3,
      "text": "Add leeks and salt, sweat for 5 minutes"
    },
    {
      "id": 4,
      "text": "Decrease heat to medium-low and cook until leeks are tender, approximately 25 minutes, stirring occasionally"
    },
    {
      "id": 5,
      "text": "Add the potatoes and vegetable broth, increase heat to medium-high and bring to a boil"
    },
    {
      "id": 6,
      "text": "Reduce heat to low, cover, and gently simmer until potatoes are soft, approximately 45 minutes"
    },
    {
      "id": 7,
      "text": "Turn off the heat and puree with an immersion blender until smooth"
    },
    {
      "id": 8,
      "text": "Stir in heavy cream, buttermilk, and white pepper"
    },
    {
      "id": 9,
      "text": "Taste and adjust seasoning, sprinkle with chives to serve"
    }
  ],
